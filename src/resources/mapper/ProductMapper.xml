<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 为这个mapper指定一个唯一的namespace，namespace的值习惯上设置成包名+sql映射文件名，这样就能够保证namespace的值是唯一的
例如namespace="com.cn.mybatis.test1.dao.userMapper"就是com.cn.mybatis.test1.dao(包名)+userMapper(userMapper.xml文件去除后缀)
 -->
<mapper namespace="com.lcvc.ebuy_maven_ssm.dao.ProductDao">

	<select id="getProductList" resultType="com.lcvc.ebuy_maven_ssm.model.Product">
		select * from product order by id asc
	</select>

	<insert id="SaveProduct">
		insert into product(id,name,picUrl,productTypeId,orderNum,description,content,price,originalPrice,click,onSale,createTime) values(null,#{name},#{picUrl},#{productTypeId},#{orderNum},#{description},#{content},#{price},#{originalPrice},#{click},#{onSale},#{createTime})
	</insert>

	<delete id="deleteProduct">
		delete from product where id=#{id}
	</delete>

	<select id="existsProduct" resultType="int">
		select count(id) from producttype where name=#{name} and id!=#{id}
	</select>

	<update id="updateProduct">
		update product set name=#{name},picUrl=#{pickUrl},productTypeId=#{productTypeId},orderNum=#{orderNum},description=#{description},content=#{content},price=#{price},originalPrice=#{originalPrice},click=#{click},onSale=#{onSale},createTime=#{createTime} where id=#{id}
	</update>

	<select id="getProduct" resultType="com.lcvc.ebuy_maven_ssm.model.Product">
		select * from product where id=#{id}
	</select>
</mapper>